<h1>立法會會議提案表決紀錄</h1>

<table id="motion_list" class="table table-striped table-bordered table-responsive" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>日期</th>
            <th>動議</th>
            <th>動議人</th>
          </tr>
        </thead>
        <tbody>
          <% @result.each do |item| %>
            <tr onclick="var item= '<%=item['id']%>';analyze(item);">
              <td><%= item["date"] %></td>
              <td><%= item[:motion_ch] %></td>
              <td><%= item[:mover_ch] %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
<hr/>
<h4 id="selected_motion"></h4>
<table id="vote_list" class="table table-striped table-bordered table-responsive">
  <thead>
    <tr>
      <th>議員</th>
      <th>Present/Yes/No/Absent</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
